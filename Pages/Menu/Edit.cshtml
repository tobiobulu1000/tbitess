@page
@model TBitesRestaurant.Pages.Menu.EditModel 

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Food Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodItem.Id" />

            <div class="form-group">
                <label asp-for="FoodItem.Item_Name" class="control-label"></label>
                <input asp-for="FoodItem.Item_Name" class="form-control" />
                <span asp-validation-for="FoodItem.Item_Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FoodItem.Item_Desc" class="control-label"></label>
                <input asp-for="FoodItem.Item_Desc" class="form-control" />
                <span asp-validation-for="FoodItem.Item_Desc" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="FoodItem.Available" type="checkbox" /> <!-- ✅ Fixed boolean input -->
                <label class="form-check-label" asp-for="FoodItem.Available"></label>
                <span asp-validation-for="FoodItem.Available" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="FoodItem.Vegetarian" type="checkbox" /> <!-- ✅ Fixed boolean input -->
                <label class="form-check-label" asp-for="FoodItem.Vegetarian"></label>
                <span asp-validation-for="FoodItem.Vegetarian" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FoodItem.Price" class="control-label"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}